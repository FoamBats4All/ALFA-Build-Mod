 #include "acr_trigger_i"
 #include "acr_spawn_i"
 #include "acr_tools_i"

void main()

{

   ACR_CreatureOnSpawnIn();
   string sResRef = GetResRef(OBJECT_SELF);	 
   		if(GetLocalString(GetModule(), sResRef) == sResRef)
			{DestroyObject(OBJECT_SELF);}
		 else
			{SetLocalString(GetModule(), sResRef, sResRef);
			 DelayCommand(1800.0, SetLocalString(GetModule(), sResRef, sResRef));
			}
		
   	  
   

			 
	}